<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>TravelDreamWEB</display-name>
    <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>/faces/*</url-pattern>
	<url-pattern>*.xhtml</url-pattern>
	<url-pattern>*.jsf</url-pattern>
  </servlet-mapping>

  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>travelrealm</realm-name>
    <form-login-config>
        <form-login-page>/home.xhtml</form-login-page>
        <form-error-page>/loginError.xhtml</form-error-page>
    </form-login-config>

  </login-config>




  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Admins Pages</web-resource-name>
      <description></description>
      <url-pattern>/admin/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>AMMINISTRATORE</role-name>
    </auth-constraint>
  </security-constraint> 
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Dipendente Pages</web-resource-name>
      <description></description>
      <url-pattern>/dipendente/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>DIPENDENTE</role-name> 
    </auth-constraint>
  </security-constraint> 
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>cliente Pages</web-resource-name>
      <description></description>
      <url-pattern>/store/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>CLIENTE</role-name>
    </auth-constraint>

  </security-constraint> 
 
  
  <welcome-file-list> 
    <welcome-file>home.xhtml</welcome-file>
  </welcome-file-list>
	<mime-mapping>
        <extension>jpg</extension>
        <mime-type>image/jpeg</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>woff</extension>
        <mime-type>application/font-woff</mime-type>
    </mime-mapping>
    <context-param>
  <param-name>com.ocpsoft.pretty.DEVELOPMENT</param-name>
  <param-value>true</param-value>
</context-param>
</web-app>